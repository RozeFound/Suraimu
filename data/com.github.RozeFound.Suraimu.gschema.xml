<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="Suraimu">

	<schema id="com.github.RozeFound.Suraimu" path="/com/github/RozeFound/Suraimu/">

	    <key type="i" name="theme">
			<default>0</default>
			<summary>Theme index</summary>
			<description>Theme index 0=auto, 1=light, 2=dark</description>
		</key>

		<key type="i" name="width">
			<default>860</default>
			<summary>Main Window Width</summary>
		</key>

		<key type="i" name="height">
			<default>685</default>
			<summary>Main Window Height</summary>
		</key>

		<key type="b" name="animations">
			<default>true</default>
			<summary>Enable animations</summary>
		</key>

		<key type="b" name="animations-preload">
			<default>false</default>
			<summary>Enable animations preloading</summary>
		</key>

	</schema>

</schemalist>